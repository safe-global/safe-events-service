    "test:e2e": "NODE_OPTIONS=--experimental-vm-modules jest --config ./test/jest-e2e.json",
    "test:e2e:cov": "NODE_OPTIONS=--experimental-vm-modules jest --config ./test/jest-e2e.json --coverage",
